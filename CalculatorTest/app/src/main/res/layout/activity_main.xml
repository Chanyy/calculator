<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBackground"
    tools:context="com.calculator.chany.calculatortest.MainActivity">

    <!-- outside layer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <!-- number text view-->
        <TextView
            android:id="@+id/number_text_view"
            android:text="0"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4"
            android:background="@drawable/rectangle"
            android:textSize="55dp"
            android:textAlignment="textEnd"
            android:gravity="center"
            android:paddingRight="12dp"
            android:layout_margin="15dp"
            />

        <!-- number column box holder layer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight=".6"
            >
            <!-- number column 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight=".25"
                >

                <Button
                    android:id="@+id/button_seven"
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:background="@drawable/custom_button_ripple"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

                <Button
                    android:id="@+id/button_four"
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

                <Button
                    android:id="@+id/button_one"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

                <Button
                    android:id="@+id/button_decimal"
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

            </LinearLayout>

            <!-- number column 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight=".25"

                >

                <Button
                    android:id="@+id/button_eight"
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

                <Button
                    android:id="@+id/button_five"
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

                <Button
                    android:id="@+id/button_two"
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

                <Button
                    android:id="@+id/button_zero"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

            </LinearLayout>

            <!-- number column 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight=".25"
                >

                <Button
                    android:id="@+id/button_nine"
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

                <Button
                    android:id="@+id/button_six"
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

                <Button
                    android:id="@+id/button_three"
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

                <Button
                    android:id="@+id/button_equals"
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

            </LinearLayout>

            <!-- number column 4 (5 buttons) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight=".25"
                >

                <Button
                    android:id="@+id/button_clear"
                    android:text="C"
                    android:longClickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

                <Button
                    android:id="@+id/button_divide"
                    android:text="รท"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

                <Button
                    android:id="@+id/button_multiply"
                    android:text="\u00D7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

                <Button
                    android:id="@+id/button_subtraction"
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />
                <Button
                    android:id="@+id/button_addition"
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:background="@drawable/number_background"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="3dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
